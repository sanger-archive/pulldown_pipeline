<%= page(:"robot-verification-#{robot.layout}") do %>

  <%= header do %>
    <h1>Perform Transfers</h1>
  <% end %>

  <%= content do %>
    <%= flash_messages %>
    <h2><%= t("robots.#{robot.name}.title_text") %></h2>
    <%= form_for :robot, :url => "#{robot_path(robot.name)}/start" do |form| %>
      <div class="ui-grid-a">
        <%= render :partial => robot.layout, :locals => {:robot => robot, :form => form } %>

        <div class="ui-block-b">
          <div id="robot-verification" class="scape-ui-block" >
            <div class="instructions ui-body">
              <h3><%= t("robots.#{robot.name}.instruction_summary") %></h3>
              <ol>
                <%= t("robots.#{robot.name}.instructions").html_safe %>
              </ol>
            </div>

            <h2>Start Robot</h2>
              <%= submit_tag "Start the #{robot.name}",
                :name           => nil,
                :class          => "submit",
                :id             => 'start-robot',
                :'data-icon'    => "arrow-r",
                :'data-iconpos' => "right",
                :'data-theme'   => "b",
                :disabled       => true
              %>
          </div>
        </div>
      </div>
    <% end # of form%>
  <% end %>
<% end %>
