<%= page(:admin) do %>
  <%= header(@presenter, 'Administer Plate', :'data-theme' => 'e') %>

  <%= content do %>
    <%= flash_messages %>
    <%= state_change_form(@presenter) %>
  <% end %>

<% end %>

<script type="text/javascript">
  $(function(){
    $('#plate_edit').submit(function() {
        if ($('#user_id').val().length == 0) {
          alert("Please scan your swipecard...");
          return false;
        }
    });

    // Trap the carriage return sent by the swipecard reader
    $("#user_id").bind("keydown", function(e) {
      var code=e.charCode || e.keyCode;
      if (code==13) {
        return false;
      }
    });
      
  });
</script>
